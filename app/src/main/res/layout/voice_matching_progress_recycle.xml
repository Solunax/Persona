<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/voice_matching_progress_codename"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Item"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/voice_matching_progress_buyer_id"
            android:layout_width="360dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Item"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/voice_matching_progress_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Item"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/voice_matching_progress_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_gradient"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:text="수락" />

            <Button
                android:id="@+id/voice_matching_progress_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_white_gradient"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:text="취소" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>