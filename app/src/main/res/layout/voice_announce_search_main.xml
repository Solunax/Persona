<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#CBBBFF"
        android:textSize="28dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:drawableRight="@drawable/drawer"
        android:paddingRight="20dp"
        android:paddingLeft="60dp"
        android:text="공고 검색" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/voice_announce_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_text_field"
            android:drawableLeft="@drawable/search_small"
            android:ems="10"
            android:hint="공고 검색"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/voice_announce_apply_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_white_gradient"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="18dp"
            android:text="지원한 공고 목록" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voice_announce_list"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />


</LinearLayout>