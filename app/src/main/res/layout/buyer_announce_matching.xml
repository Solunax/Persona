<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#CBBBFF"
        android:textSize="28dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:drawableRight="@drawable/drawer"
        android:paddingRight="20dp"
        android:paddingLeft="60dp"
        android:text="공고 지원자" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="8dp">

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/buyer_announce_voice_matching_profile_image"
            android:layout_width="120dp"
            android:background="@drawable/profile_shadow"
            android:layout_height="120dp"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/buyer_voice_matching_name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="26dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성우 연락처"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/buyer_announce_voice_matching_phone_number"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/btn_text_field"
            android:text="연락처"
            android:textSize="26dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성우 이메일"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/buyer_announce_voice_matching_email"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:background="@drawable/btn_text_field"
            android:padding="10dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="26dp"/>
    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:id="@+id/buyer_announce_voice_matching_request_done"
        android:textColor="@color/white"
        android:background="@drawable/btn_gradient"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="협업하기" />

    </LinearLayout>

</LinearLayout>