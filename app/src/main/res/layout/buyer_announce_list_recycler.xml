<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buyer_announce_mother_linear"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shadow">

        <TextView
            android:id="@+id/buyer_announce_title"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="NAME"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <LinearLayout
            android:id="@+id/buyer_announce_date_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buyer_announce_start"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="DATE"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="~"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/buyer_announce_end"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="DATE"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/buyer_announce_act"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="MAIN/SUB"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <LinearLayout
            android:id="@+id/buyer_announce_more_detail_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buyer_announce_now_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:text="현재 지원자 : 0 명"
                android:singleLine="true"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/buyer_announce_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_gradient"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:text="자세히" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/buyer_announce_detail_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hidden_character_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:background="@drawable/btn_text_field"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="CHARACTER"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/hidden_script"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:background="@drawable/btn_text_field"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="SCRIPT"
                android:textColor="@color/black"
                android:textSize="24dp"/>


            <LinearLayout
                android:id="@+id/hidden_date_linear"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/btn_text_field"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hidden_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="DATE"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="~"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/hidden_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="DATE"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/hidden_character"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_text_field"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="CHARACTER"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/hidden_pay"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_text_field"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="PAY"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hidden_see_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_white_gradient"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:text="지원자 보기" />

                <Button
                    android:id="@+id/hidden_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_gradient"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:text="수정" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>